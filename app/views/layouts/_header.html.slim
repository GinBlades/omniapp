              li = link_to 'Meals', admin_health_meals_path
          li = link_to 'Budget', admin_budget_path
        
          li.dropdown
            a.dropdown-toggle data-toggle='dropdown' role='button' aria-expanded='false'
              | Notes
              '
              span.caret

            ul.dropdown-menu role='menu'
              li = link_to 'Dashboard', admin_notes_path
              li = link_to 'Entries', admin_notes_entries_path
              li = link_to 'Categories', admin_notes_categories_path
          li.dropdown
            a.dropdown-toggle data-toggle='dropdown' role='button' aria-expanded='false'
              | Blog
              '
              span.caret

            ul.dropdown-menu role='menu'
              li = link_to 'Dashboard', admin_blog_path
