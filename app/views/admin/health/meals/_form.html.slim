= simple_form_for([:admin,@health_meal]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :time, as: :string, input_html: { type: 'datetime-local', value: time_form(@health_meal) || time_form(Time.zone.now) }
    = f.input :meal_category, as: :radio_buttons, collection: Health::Meal.meal_categories.keys.to_a
    .row
      .col-sm-4
        = f.input :calories
      .col-sm-4
        = f.input :quality, as: :select, collection: 1..10
      .col-sm-4
        = f.input :healthiness, as: :select, collection: 1..10
    = f.input :home
    = f.input :vegetarian
    = f.input :cost
    = f.input :notes, as: :text

  .form-actions
    = f.button :submit, class: 'btn btn-success'
